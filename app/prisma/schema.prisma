// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

// Home Assistant connection settings
model HAConnection {
  id           String   @id @default(cuid())
  url          String
  accessToken  String   // Service account access token (used by app)
  refreshToken String?  // Service account refresh token
  expiresAt    DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// Spoolman connection settings
model SpoolmanConnection {
  id        String   @id @default(cuid())
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Application settings
model Settings {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Automation registry - tracks created HA automations
model Automation {
  id             String   @id @default(cuid())
  haAutomationId String   @unique // HA's automation ID
  trayId         String   // The tray this automation monitors
  printerId      String   // The printer entity ID
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Activity log for debugging/monitoring
model ActivityLog {
  id        String   @id @default(cuid())
  type      String   // "spool_change", "automation_created", "error", etc.
  message   String
  details   String?  // JSON string for additional data
  createdAt DateTime @default(now())
}
